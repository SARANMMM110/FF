{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "types": ["node", "@cloudflare/workers-types"]
  },
  "include": ["src/server/**/*", "src/worker/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/react-app"]
}

